{
  "compilerOptions": {
    "target": "es5",
    "outDir": "lib",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "typeRoots": ["../../node_modules/@types", "../../typings"],
    "types": ["webpack-env", "@storybook/react", "screener-storybook", "custom-global"]
  },
  "include": ["src"]
}
